doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{docTitle}
    link(rel="stylesheet", href="/css/estilos.css")
    link(rel="stylesheet", href="/css/estiloUsuarios.css")
  body
    header
      nav.navbar
        .logo Mi Sitio
        ul.nav-links
          li
            a(href="/") Inicio
          li
            a(href="/users") Usuarios
          li
            a(href="/admin/add-user") Agregar Usuario

    main.usuarios-container
      if users.length > 0
        h1 Usuarios Registrados
        .usuarios-grid
          each user in users
            .usuario-card #{user.name}
      else 
        h1 No users registered :(
